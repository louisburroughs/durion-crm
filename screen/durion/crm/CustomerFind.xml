<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Find Customers" default-menu-index="1">

    <transition name="createCustomer">
        <service-call name="durion.crm.DurCrmServices.create#Customer"/>
        <default-response url="CustomerEdit"/>
    </transition>

    <transition name="customerDetail">
        <default-response url="CustomerEdit"/>
    </transition>

    <actions>
        <entity-find entity-name="durion.crm.DurCustomer" list="customerList">
            <search-form-inputs default-order-by="-createdDate"/>
        </entity-find>
    </actions>

    <widgets>
        <container-dialog id="CreateCustomerDialog" button-text="Create Customer">
            <form-single name="CreateCustomer" transition="createCustomer">
                <field name="customerName"><default-field title="Name" required="true"><text-line size="40"/></default-field></field>
                <field name="customerType">
                    <default-field title="Type" required="true">
                        <drop-down>
                            <option key="INDIVIDUAL" text="Individual"/>
                            <option key="BUSINESS" text="Business"/>
                            <option key="FLEET" text="Fleet Operator"/>
                        </drop-down>
                    </default-field>
                </field>
                <field name="businessType">
                    <default-field title="Business Type">
                        <drop-down allow-empty="true">
                            <option key="RETAIL" text="Retail"/>
                            <option key="WHOLESALE" text="Wholesale"/>
                            <option key="WHOLESALE_RETAIL" text="Wholesale/Retail"/>
                        </drop-down>
                    </default-field>
                </field>
                <field name="industryType"><default-field title="Industry"><text-line size="30"/></default-field></field>
                <field name="taxId"><default-field title="Tax ID"><text-line size="30"/></default-field></field>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>

        <form-list name="CustomerList" list="customerList" skip-form="true">
            <field name="customerId">
                <default-field title="ID">
                    <link url="customerDetail" text="${customerId}" parameter-map="[customerId: customerId]"/>
                </default-field>
            </field>
            <field name="customerName"><default-field><display/></default-field></field>
            <field name="customerType"><default-field title="Type"><display/></default-field></field>
            <field name="statusId"><default-field title="Status"><display/></default-field></field>
            <field name="businessType"><default-field title="Bus Type"><display/></default-field></field>
            <field name="createdDate">
                <default-field title="Created">
                    <display format="yyyy-MM-dd"/>
                </default-field>
            </field>
        </form-list>
    </widgets>
</screen>
